@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    <title>注册 - Sammo's Blog</title>
    <meta name="keywords" content="Sammo's Blog">
    <meta name="description" content="Sammo's Blog">
    <link href="~/Static/Admin/Css/Shared/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Static/Admin/Css/Shared/font-awesome.css" rel="stylesheet" />
    <link href="~/Static/Admin/Css/Shared/iCheck/custom.css" rel="stylesheet" />
    <link href="~/Static/Admin/Css/Shared/animate.css" rel="stylesheet" />
    <link href="~/Static/Admin/Css/Shared/style.css" rel="stylesheet" />
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">Sammo</h1>
            </div>
            <h3>欢迎来到Sammo's Blog</h3>
            <p>创建一个新账户</p>
            <form class="m-t" role="form" action="login.html">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="请输入用户名" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="请输入密码" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="请再次输入密码" required="">
                </div>
                <div class="form-group text-left">
                    <div class="checkbox i-checks">
                        <label class="no-padding">
                            <input type="checkbox"><i></i> 我同意注册协议
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">注 册</button>
                <p class="text-muted text-center">
                    <small>已经有账户了？</small><a href="/Admin/Account/Login">点此登录</a>
                </p>
            </form>
        </div>
    </div>
    <!-- Mainly scripts -->
    <script src="~/Static/Admin/Js/Shared/jquery-2.1.1.min.js"></script>
    <script src="~/Static/Admin/Js/Shared/bootstrap.min.js"></script>
    <script src="~/Static/Admin/Js/Shared/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

</body>
</html>