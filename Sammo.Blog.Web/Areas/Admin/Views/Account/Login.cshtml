@model Sammo.Blog.Application.Account.Dto.LoginInput
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    <title>登录 - Sammo's Blog</title>
    <meta name="keywords" content="Sammo's Blog">
    <meta name="description" content="Sammo's Blog">
    @Styles.Render("~/Bundles/Static/Css/Admin/Common")
    @Styles.Render("~/Bundles/Static/Css/Animate")
    @Styles.Render("~/Bundles/Static/Css/ICheck")
</head>

<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">Sammo</h1>
            </div>
            <h3>欢迎使用Sammo's Blog</h3>
            @*<form class="m-t" role="form">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="用户名" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="密码" required="">
                </div>
                <div class="form-group text-left">
                    <div class="checkbox i-checks">
                        <label class="no-padding">
                            <input type="checkbox"><i></i> 记住我？
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
                <p class="text-muted text-center">
                    <a href="login.html#"><small>忘记密码了？</small></a> | <a href="/Admin/Account/Register">注册一个新账号</a>
                </p>
            </form>*@
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "m-t", role = "form", ReturnUrl = Request.QueryString["ReturnUrl"] }))
            {

                @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserNameOrEmail, new { @class = "form-control", placeholder = "请输入用户名或邮箱" })
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "请输入密码" })
                </div>
                <div class="form-group text-left">
                    <div class="checkbox i-checks">
                        <label class="no-padding">
                            @*<input type="checkbox"><i></i> 记住密码*@
                            @Html.CheckBoxFor(m => m.RememberMe, new { @checked = true })&nbsp;@Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                @Html.Hidden("RememberMe", true)
                <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
                @Html.AntiForgeryToken();
                @Html.ValidationSummary("", new { @class = "form-group text-left , text-danger" })
                <p class="text-muted text-center">
                    <a href="login.html#"><small>忘记密码了？</small></a> | <a href="/Admin/Account/Register">注册一个新账号</a>
                </p>
            }
        </div>
    </div>
    <!-- Mainly scripts -->
    @Scripts.Render("~/Bundles/Static/Js/Admin/Common")
    @Scripts.Render("~/Bundles/Static/Js/Vue")
    @Scripts.Render("~/Bundles/Static/Js/ICheck")
    @Scripts.Render("~/Bundles/Static/Js/Toastr")
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>


