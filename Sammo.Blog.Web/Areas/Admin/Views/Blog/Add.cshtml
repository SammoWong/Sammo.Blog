@model Sammo.Blog.Application.Blog.Dto.AddBlogInput
@using Sammo.Blog.Application.Blog.Dto
@{
    ViewBag.Title = "撰写博客";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section css{
    @Styles.Render("~/Bundles/Static/Css/Chosen")
}
<div class="wrapper wrapper-content">
    <div class="row">
        @using (Html.BeginForm("Add", "Blog", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="col-lg-12 ">
                <div class="mail-box-header">
                    <div class="pull-right tooltip-demo">
                        <a href="~/Admin/Blog/Add" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="放弃"><i class="fa fa-times"></i> 放弃</a>
                    </div>
                    <h2>
                        添加随笔
                    </h2>
                </div>
                <div class="mail-box">
                    <div class="mail-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">博客标题：</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "博客标题" })

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">博客标签：</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.TagNameString, new { @class = "form-control", placeholder = "博客标签" })
                            </div>
                        </div>
                        @*<div class="form-group">
                                <label class="col-sm-2 control-label">博客标签：</label>
                                <div class="col-sm-10">
                                    <select data-placeholder="选择博客标签" class="form-control chosen-select" multiple tabindex="4">
                                        <option value="">请选择博客标签</option>
                                        <option value="110000" hassubinfo="true">北京</option>
                                        <option value="120000" hassubinfo="true">天津</option>
                                        <option value="130000" hassubinfo="true">河北省</option>
                                    </select>
                                </div>
                            </div>*@
                        <div class="form-group">
                            <label class="col-sm-2 control-label">博客分类：</label>
                            <div class="radio i-checks">
                            @{
                                var categories = TempData["Categories"] as List<CategoryOutput>;
                                foreach (var category in categories)
                                {
                                    <label>@Html.RadioButtonFor(m=>m.CategoryId, category.Id, false) @category.Name</label>
                                }
                            }
                            </div>
                        </div>
                    </div>
                    <div class="mail-text h-500">
                        @Html.TextAreaFor(m => m.Article, new { @class = "summernote" })
                        <div class="clearfix"></div>
                    </div>
                    <div class="mail-body text-right tooltip-demo">
                        @Html.CheckBoxFor(m => m.IsTop, new { @class = "checkbox i-checks" })&nbsp;@Html.DisplayNameFor(m => m.IsTop)
                        <button class="btn btn-sm btn-primary"><i class="fa fa-reply"></i> 发布</button>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
                                        }
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Bundles/Static/Js/Chosen")

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            $('.summernote').summernote({
                lang: 'zh-CN'
            });

        });
        var edit = function () {
            $('.click2edit').summernote({
                focus: true
            });
        };
        var save = function () {
            var aHTML = $('.click2edit').code(); //save HTML If you need(aHTML: array).
            $('.click2edit').destroy();
        };

    </script>
}

